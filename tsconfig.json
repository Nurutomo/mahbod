{
    "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "experimentalDecorators": true,
      "allowJs": false,
      "checkJs": false,
      "outDir": "lib",
      "strict": false,
      "noImplicitThis": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "declaration": true,
      "lib": ["es2020", "esnext.array", "DOM"]
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules"]
  }